{{!
    @template tool_richardnz/tasks_table

    Moodle table rendering template for tasks table

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
        {
         "class": "tool_richardnz_table",
         "caption": "this is table is for...",
         "tableheaders": ["colname", "colname"],
         "tabledata": ["tabledata", "tabledata"]
        }
}}
<div class="{{class}}">
  <p>{{caption}}</p>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        {{#tableheaders}}
          <th>{{.}}</th>
        {{/tableheaders}}
      </thead>
      <tbody>
        {{#tabledata}}
          {{> tool_richardnz/table_row}}
        {{/tabledata}}
      </tbody>
    </table>
  </div>
</div>