{{!
    @template tool_richardnz/table_row

    Moodle table rendering template for tasks table row

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
        {
         "id": "1",
         "courseid": "7",
         "name": "Complete task",
         "priority": "1",
         "completed": "yes",
         "timecreated": 1293876000,
         "timemodified": 1293978000
        }
}}
<tr>
    <td>{{id}}</td>
    <td>{{courseid}}</td>
    <td>{{name}}</td>
    <td>{{priority}}</td>
    <td>{{completed}}</td>
    <td>{{#userdate}}{{timecreated}}, {{#str}} strftimedate {{/str}} {{/userdate}}</td>
    <td>{{#userdate}}{{timemodified}}, {{#str}} strftimedate {{/str}} {{/userdate}}</td>
</tr>