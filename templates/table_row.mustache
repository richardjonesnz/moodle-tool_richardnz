{{!
    @template tool_richardnz/table_row

    Moodle table rendering template for tasks table row

    Classes required for JS (I think this goes here??):
    * tool_richardnz_deletelink

    Data attributes required for JS:
    * none

    Example context (json):
        {
         "id":"1",
         "name":"Complete task",
         "description":"Detailed instructions",
         "attachment" :"Attachment link",
         "priority":"1",
         "completed":"yes",
         "timecreated":"1293876000",
         "timemodified":"1293978000",
         "editlink":"#",
         "deletelink":"#"
        }
}}
<tr>
    <td>{{id}}</td>
    <td>{{name}}</td>
    <td>{{{description}}}</td>
    <td>{{{attachment}}}</td>
    <td>{{priority}}</td>
    <td>{{completed}}</td>
    <td>{{#userdate}}{{timecreated}},
        {{#str}} strftimedate {{/str}} {{/userdate}}</td>
    <td>{{#userdate}}{{timemodified}},
        {{#str}} strftimedate {{/str}} {{/userdate}}</td>
    <td>
        {{#editlink}}
            <a href="{{{link}}}">
                {{#pix}}
                    {{icon.icon}}, {{icon.component}}, {{icon.alt}}
                {{/pix}}
            </a>
        {{/editlink}}
    </td>

    <td>
        {{#deletelink}}
            <a href="{{{link}}}" class="tool_richardnz_deletelink">
                {{#pix}}
                    {{icon.icon}}, {{icon.component}}, {{icon.alt}}
                {{/pix}}
            </a>
        {{/deletelink}}
    </td>
</tr>